{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "tsc",
            "type": "shell",
            "command": "./node_modules/typescript/bin/tsc",
            "args": ["-p","tsconfig.build.json"],
            "presentation": {
              "echo": true,
              "reveal": "silent",
              "focus": false,
              "panel": "shared",
              "showReuseMessage": true,
              "clear": false
            },
            "isBackground": true,
            "problemMatcher": "$tsc-watch"
          }
    ]
}
